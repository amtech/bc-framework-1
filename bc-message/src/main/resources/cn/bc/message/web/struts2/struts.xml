<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="message" extends="bc-default" namespace="/bc/message">
		<action name="create" class="messageAction" method="create">
			<result name="form">/bc/message/form.jsp</result>
		</action>
		<action name="edit" class="messageAction" method="edit">
			<result name="form">/bc/message/form.jsp</result>
		</action>
				
		<action name="save" class="messageAction" method="save"/>
		<action name="delete" class="messageAction" method="delete"/>
		<action name="list" class="messageAction" method="list"/>
		<action name="paging" class="messageAction" method="paging"/>
		<action name="data" class="messageAction" method="data"/>
	</package>
</struts>